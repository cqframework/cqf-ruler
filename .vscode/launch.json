{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch Server (Live Reload)",
            "request": "launch",
            "mainClass": "org.opencds.cqf.ruler.Application",
            "projectName": "cqf-ruler-server",
            "vmArgs": [
                "-XX:TieredStopAtLevel=1",
                "-Xverify:none",
                "-Dspring.main.lazy-initialization=true",
					 "-Dloader.debug=true",
					 "-Ddebug=true"
            ],
            "stepFilters": {
                "classNameFilters": [
                    "java.*",
                    "javax.*",
                    "com.sun.*",
                    "sun.*",
                    "sunw.*",
                    "org.omg.*"
                ]
            },
            "classPaths": [
                "$Auto",
                "${workspaceFolder}/plugin/hello-world/target/classes",
                "${workspaceFolder}/plugin/cpg/target/classes",
                "${workspaceFolder}/plugin/ra/target/classes",
                "${workspaceFolder}/plugin/sdc/target/classes",
                "${workspaceFolder}/plugin/utility/target/classes",
					 "${workspaceFolder}/plugin/devtools/target/classes",
					 "${workspaceFolder}/plugin/cql/target/classes",
					 "${workspaceFolder}/plugin/security/target/classes"
            ]
        },
        {
            "type": "java",
            "name": "Launch Server",
            "request": "attach",
            "hostName": "localhost",
            "port": "5005",
            "stepFilters": {
                "classNameFilters": [
                    "java.*",
                    "javax.*",
                    "com.sun.*",
                    "sun.*",
                    "sunw.*",
                    "org.omg.*"
                ]
            },
            "preLaunchTask": "run-maven",
            "postDebugTask": "stop-maven"
        },
        {
            "type": "java",
            "name": "Attach",
            "request": "attach",
            "hostName": "localhost",
            "port": "5005",
            "stepFilters": {
                "classNameFilters": [
                    "java.*",
                    "javax.*",
                    "com.sun.*",
                    "sun.*",
                    "sunw.*",
                    "org.omg.*"
                ]
            }
        },
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "${file}",
            "stepFilters": {
                "classNameFilters": [
                    "java.*",
                    "javax.*",
                    "com.sun.*",
                    "sun.*",
                    "sunw.*",
                    "org.omg.*"
                ]
            }
        }
    ]
}
